{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "cleanUrls": false,
  "trailingSlash": false,
  "routes": [
    {
      "src": "^/$",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "no-store, no-cache, must-revalidate"
      }
    },
    {
      "src": "^(?!/index\\.html$).*$",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ]
}
